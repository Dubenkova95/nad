импорт ява.утиль.Массивов;

общественный класс PointsChart2
{
    публичный статический двойной авг(двойной такой, двойной б, двойной с)
    {
        двойной Х = (А + Б + С) / 3;
        возврат х;
    }

    публичный статический пустота главный(строка[] аргументы)
    {
        двойной[] Кол = {1,2,4,3};
        двойной[] число2 = новый двойной[Кол.длина];
        инт minusIndex;
        инт plusIndex;
        инт индекса;

        для (Тип int я = 0; я < количество.длина; я++)
        {
 minusIndex = я - 1;
 plusIndex = я + 1;
            Индекс = я;

            если(я == 0)
            {
 число2[я] = Кол[я];
 число2[номер.Длина - 1] = номер[номер.Длина - 1];
            }
            остальное, если(plusIndex < количество.длина)
            {
 число2[я] = ср(числа[Индекс],количество[minusIndex], количество[plusIndex]);
            }
        }

        Системы.из.печати(массивов.метод tostring(число2));
    }

}
